<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardobat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_background"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardBackgroundColor="#40d7cb"
                app:cardCornerRadius="16dp">
                <ImageView
                    android:id="@+id/ivobat"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    tools:srcCompat="@drawable/baseline_medication_20" />
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/cardview_background"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvnamaobat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="5"
                    android:text="TextView"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:autoSizeTextType="uniform"/>

                <TextView
                    android:id="@+id/tvumurobat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="5"
                    android:text="TextView"
                    android:textColor="@color/black"
                    app:autoSizeTextType="uniform"/>

                <TextView
                    android:id="@+id/tvpenyakit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="5"
                    android:text="TextView"
                    android:textColor="@color/black"
                    app:autoSizeTextType="uniform"/>
            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>